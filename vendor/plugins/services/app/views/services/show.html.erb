<% content_for :body_content_title do %>
  <%= @service.title %>
<% end %>

<% content_for :body_content_left do %>
  <h2><%= h @service.title %></h2>
  <%= @service.content %>
  <h2><%= @service.staff.summary rescue "No Staff Member Assigned"%> </h2>
  <%= image_fu @service.staff.photo rescue nil%>
  <%= @service.staff.description %>
<% end %>

<% content_for :sidebar do %>
  <div id="sidebar">
    <div id="container">
      <ul class="clearfix">
        <% @services.each do |service| %>
          <li <%= 'class="selected"' if service == @service %>
            <%= link_to service.title, service_url(service) %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>


<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="services">
    <% @services.each do |service| %>
      <li>
        <%= link_to service.title, service_url(service) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
