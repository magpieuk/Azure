<% content_for :body_content_title do %>
  <%= @staff.name %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Name</h3>
    <%= @staff.name %>
  </div>
  
  <div>
    <h3>Job Title</h3>
    <%= @staff.job_title %>
  </div>
  
  <div>
    <h3>Location</h3>
    <%= @staff.location_id %>
  </div>
  
  <div>
    <h3>Photo</h3>
    <%= image_fu @staff.photo, nil %>
  </div>
  
  <div>
    <h3>Email</h3>
    <%= @staff.email %>
  </div>
  
  <div>
    <h3>Telephone</h3>
    <%= @staff.telephone %>
  </div>
  
  <div>
    <h3>Description</h3>
    <%= @staff.description %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="staffs">
    <% @staffs.each do |staff| %>
      <li>
        <%= link_to staff.name, staff_url(staff) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
