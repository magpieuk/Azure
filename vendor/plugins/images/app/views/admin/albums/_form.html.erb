<% form_for [:admin, @album] do |f| -%>
  <%= f.error_messages %>
  
  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger' -%>
  </div>
  
  <div class='field'>
    <%= f.label :cover_image -%>
    <%= render :partial => "/shared/admin/image_picker", :locals => {
      :f => f,
      :field => :cover_image_id,
      :image => @album.cover_image,
      :toggle_image_display => false
    } %>
  </div>
  
  <div class='field'>
    <%= f.label :show_in_gallery -%>
    <%= f.check_box :show_in_gallery -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions", :locals => {:f => f, :continue_editing => false} %>
<% end -%>
