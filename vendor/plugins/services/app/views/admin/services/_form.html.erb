<% form_for [:admin, @service] do |f| -%>
  <%= f.error_messages %>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger' -%>
  </div>
  
  <div class='field'>
    <%= f.label :content -%>
    <%= f.text_area :content, :rows => 20, :class => 'wymeditor widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :contact_id -%>
    <%= f.collection_select :contact_id, @contacts, :id, :name, {:prompt => :true} -%>
  </div>
  
  <div class='field'>
    <%= f.label :location_id -%>
    <%= f.collection_select :location_id, @locations, :id, :name, {:prompt => :true} -%>
  </div>
  
  <div class='field'>
    <%= f.label :category_id -%>
    <%= f.collection_select :category_id, @categories, :id, :name, {:prompt => :true} -%>
  </div>
  
  <div class='field'>
    <%= f.label :album_id, "Choose a photo album to display at the top of this service page" %>
    <%= f.collection_select :album_id, Album.all, :id, :name, :include_blank => true %>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions", :locals => {:f => f, :continue_editing => false} %>
<% end -%>
