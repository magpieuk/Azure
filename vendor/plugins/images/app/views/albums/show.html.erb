<% content_for :head do %>
  <script type="text/javascript" src="/theme/javascripts/jquery.easing.1.3.js"></script>
  <script type="text/javascript" src="/theme/javascripts/jquery.galleryview-2.1.1-pack.js"></script> 
  <script type="text/javascript" src="/theme/javascripts/jquery.timers-1.1.2.js"></script>
  <script type="text/javascript">
    $(document).ready(function() {
      $('#photos').galleryView({
            panel_width: 960,
            panel_height: 300,
            frame_width: 100,
            frame_height: 100
    });
  </script>
<% end %>
<% content_for :body_content_left do %>

  <div id="photos" class="galleryview">
    <% @album.images.each do |img| %>
    <div class="panel">
      <%= image_fu img %>
      <div class="panel-overlay">
        <h2><%= img.caption %></h2>
      </div>
    </div>
    <% end %>
  </div>

  <ul class="filmstrip">
    <% @album.images.each do |img| %>
      <li><%= image_fu img, :preview %></li>
    <% end %>
  </ul>

<% end %>

<%= render :partial => "/shared/content_page" %>
