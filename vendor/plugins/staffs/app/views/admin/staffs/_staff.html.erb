<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(staff) -%>">
  <span class='title'>
    <%=h staff.name %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), staff_url(staff),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_staff_path(staff),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_staff_path(staff),
        :class => "cancel confirm-delete",
        :title => t('.delete') %>
  </span>
</li>
