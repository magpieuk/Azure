<% content_for :head do %>
<script type="text/javascript" src="/theme/javascripts/jquery.easing.1.3.js"></script>
<script type="text/javascript" src="/theme/javascripts/jquery.galleryview-1.1.js"></script>
<script type="text/javascript" src="/theme/javascripts/jquery.timers-1.1.2.js"></script>
<link href="/theme/javascripts/galleryview.css" media="screen" rel="stylesheet" type="text/css" />

<script type="text/javascript">
	$(document).ready(function(){
		$('#comics').galleryView({
			panel_width: 600,
			panel_height: 500,
			frame_width: 160,
			frame_height: 80,
			overlay_opacity: 0.85,
			background_color: '#53802f',
			border: '2px solid #284c0a',
			pause_on_hover: true
		});
	});
</script>


<% end %>
<% content_for :body_content_left do %>

<div id="comics" class="galleryview">
        <% @album.images.each do |img|  %>
	<div class="panel">
		<%= image_fu img %>
		<div class="panel-overlay">
			<h2><%= img.caption %></h2>
		</div>
	</div>
        <% end %>


    <ul class="filmstrip">
      <% @album.images.each do |img| %>
    	<li><%= image_fu img, :preview %></li>
      <% end %>
    </ul>
</div>


<% end %>

<%= render :partial => "/shared/content_page" %>
