<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(vacancy) -%>">
  <span class='title'>
    <%=h vacancy.job_title %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), vacancy_url(vacancy),
        :title => t('.view_live'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_vacancy_path(vacancy),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_vacancy_path(vacancy),
        :class => "cancel confirm-delete",
        :title => t('.delete') %>
  </span>
</li>
