<% content_for :body_content_title do %>
  <%= @service.title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Title</h3>
    <%= @service.title %>
  </div>
  
  <div>
    <h3>Content</h3>
    <%= @service.content %>
  </div>
  
  <div>
    <h3>Contact</h3>
    <%= @service.contact_id %>
  </div>
  
  <div>
    <h3>Location</h3>
    <%= @service.location_id %>
  </div>
  
  <div>
    <h3>Category</h3>
    <%= @service.category_id %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="services">
    <% @services.each do |service| %>
      <li>
        <%= link_to service.title, service_url(service) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
