<% content_for :body_content_title do %>
  <%= @vacancy.job_title %>
<% end %>

<% content_for :body_content_left do %>
  
  <h2><%= @vacancy.job_title %> ( <%= @vacancy.reference %> )</h2>
     
  <div>
    <h3>Starting Salary</h3>
    <p><%= @vacancy.starting_salary %></p>
  </div>
  
  <div>
    <h3>Past Probation</h3>
    <p><%= @vacancy.past_probation %></p>
  </div>
  
  <div>
    <h3>Start Date</h3>
    <p><%= @vacancy.start_date.strftime('%d %b %Y') rescue nil %></p>
  </div>
  
  <div>
    <h3>Closing Date</h3>
    <p><%= @vacancy.closing_date.strftime('%d %b %Y') rescue nil %></p>
  </div>
  
  <div>
    <h3>Description</h3>
    <p><%= @vacancy.description %></p>
  </div>
  <%= link_to "Back", :back %>
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="vacancies">
    <% @vacancies.each do |vacancy| %>
      <li>
        <%= link_to vacancy.job_title, vacancy_url(vacancy) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page", :locals => {:hide_title => true} %>
