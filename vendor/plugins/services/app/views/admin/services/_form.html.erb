<% form_for [:admin, @service] do |f| -%>
  <%= f.error_messages %>
  
  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger' -%>
  </div>
  
  <div class='field'>
    <%= f.label :content -%>
    <%= f.text_area :content, :rows => 20, :class => 'wymeditor widest' -%>
  </div>
  
  <div class='field'>
    <%= f.label :contact_id -%>
    <%= f.text_field :contact_id -%>
  </div>
  
  <div class='field'>
    <%= f.label :location_id -%>
    <%= f.text_field :location_id -%>
  </div>
  
  <div class='field'>
    <%= f.label :category_id -%>
    <%= f.text_field :category_id -%>
  </div>
  
  <%= render :partial => "/shared/admin/form_actions", :locals => {:f => f, :continue_editing => false} %>
<% end -%>
