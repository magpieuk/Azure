<% content_for :body_content_title do %>
  <%= @vacancy.job_title %>
<% end %>

<% content_for :body_content_left do %>
  
  <div>
    <h3>Job Title</h3>
    <%= @vacancy.job_title %>
  </div>
  
  <div>
    <h3>Reference</h3>
    <%= @vacancy.reference %>
  </div>
  
  <div>
    <h3>Starting Salary</h3>
    <%= @vacancy.starting_salary %>
  </div>
  
  <div>
    <h3>Past Probation</h3>
    <%= @vacancy.past_probation %>
  </div>
  
  <div>
    <h3>Start Date</h3>
    <%= @vacancy.start_date %>
  </div>
  
  <div>
    <h3>Closing Date</h3>
    <%= @vacancy.closing_date %>
  </div>
  
  <div>
    <h3>Description</h3>
    <%= @vacancy.description %>
  </div>
  
<% end %>

<% content_for :body_content_right do %>
  <h2><%= t('.other') %></h2>
  <ul id="vacancies">
    <% @vacancies.each do |vacancy| %>
      <li>
        <%= link_to vacancy.job_title, vacancy_url(vacancy) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
