<% content_for :body_content_left do %>
  <ul id="albums">
    <% @albums.each do |album| %>
    <li class="album">
        <% if album.cover_image.present? %>
          <%= link_to image_fu(album.cover_image, :grid), album_url(album) %>
        <% else %>
          <%= link_to image_fu(album.images.first, :grid), album_url(album) %>
        <% end %>
        <p><%= link_to album.name, album_url(album) %></p>
      </li>
    <% end %>
  </ul>
<% end %>

<%= render :partial => "/shared/content_page" %>
